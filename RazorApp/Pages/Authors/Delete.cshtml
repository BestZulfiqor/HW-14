@page "{id:int}"
@model RazorApp.Pages.Authors.Delete

<h2>Delete Author</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this author?</h4>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Author.Name</dd>

        <dt class="col-sm-2">Birth Date</dt>
        <dd class="col-sm-10">@Model.Author.BirthDate.ToString("dd-MM-yyyy")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Author.Id"/>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
